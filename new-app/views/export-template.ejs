<!-- CONTENT -->
<div id="content-wrap">
    <div class="report-info">
        <h1>Report for wallet <%= wallet %>, event <%= event %></h1>
        <table>
            <tr>
                <td>Made by account:</td>
                <td><%= user %></td>
            </tr>
            <tr>
                <td>Invoice Date:</td>
                <td>July 10th, 2015</td>
            </tr>
        </table>
    </div>
    <div>
        <table style="width: 100%;" class="table-transaction">
            <tr>
                <th class="text-align-center">Transactions</th>
                <th class="text-align-center">Date incurred</th>
                <th class="text-align-center">Amount</th>
                <th class="text-align-center">Currency</th>
            </tr>
            <% items.forEach(function(item){
            %><tr>
                <td>
                    <p>
                        <img src="https://static.moneylover.me/img/icon/<%= item.category.icon %>.png" alt="category" style="width: 32px; height: 32px; float: left"/>
                    <h4><%= item.category.name %></h4>
                    <span class="text-italic"><%= item.note %></span>
                    </p>
                </td>
                <td class="text-align-center"><%= item.displayDate.toDateString() %></td>
                <td class="text-align-center"><% if (item.category.type == 2) { %>-<% } %><%= item.amount %></td>
                <td class="text-align-center"><%= item.account.currency_id %></td>
            </tr><%
            }) %>
            <tr class="row-blank">
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <% total.currency.forEach(function(value, index){ %>
            <tr>
                <td></td>
                <td class="text-align-center"><% if(index === 0) { %>Total:<% } %></td>
                <td class="text-align-center"><%= total.amount[index] %></td>
                <td class="text-align-center"><%= value %></td>
            </tr>
            <% }) %>
        </table>
    </div>
</div>
</body>
</html>
