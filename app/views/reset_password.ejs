    <script src="<%= urlStatic %>lib/angular/angular.min.js"></script>
    <script src="<%= urlStatic %>js/reset_password_controller.js"></script>
    <script src="<%= urlStatic %>lib/angular/angular-route.min.js"></script>
</head>

<body>
    <div id="display-login">
        <div class="disable-background">
            <div id="user-action" ng-controller="resetPassword">
                <div class="user-title-page">
                    <h1>Reset password</h1>
                    <p ng-class="{'text-danger': submitError, 'text-success': submitSuccess}">{{message}}</p>
                </div>
                <div class="user-ResetPassword" ng-if="!submitSuccess">
                    <form class="login-box" name="resetPassword" autocomplete="off" ng-submit="submitForm(userInfo)">
                        <div class="form-group" ng-class="{'has-error': passwordError}">
                            <input type="password" class="form-control" placeholder="New password" ng-model="userInfo.password" name="password" required>
                            <p ng-if="passwordError" class="text-danger">{{passwordErrorMessage}}</p>
                        </div>
                        <div class="form-group" ng-class="{'has-error': retypePasswordError}">
                            <input type="password" class="form-control" placeholder="Retype password" ng-model="userInfo.repassword" name="repassword" required>
                            <p ng-if="retypePasswordError" class="text-danger">{{retypePasswordMessage}}</p>
                        </div>
                        <div class="form-group">
                            <button class="btn" type="submit">Confirm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
