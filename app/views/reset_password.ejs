    <link href="<%= urlStatic %>lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="<%= urlStatic %>lib/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="<%= urlStatic %>css/app.css" rel="stylesheet">

    <!--[if lt IE 9]>
